{
  "language": "ruby",
  "extension": ".rb",
  
  
  "voice_class": "Twilio::TwiML::VoiceResponse",
  "messaging_class": "Twilio::TwiML::MessagingResponse",
  "text_format": "{text}, ",
  "attribute_name_style": "camelize",
  "attribute_format": "{name}: {value}",
  "chain_calls": false,
  "code_wrapper": "{imports}\n{code}\n{print}",
  "code_wrapper_padding": 0,

  "add_imports": "single_line",
  "import_voice": "require 'twilio-ruby'",
  "import_messaging": "require 'twilio-ruby'",
  "new_block": "{indent}{parent}.{variable}({text}{attributes}) do |{variable}|",
  "new_variable": "{indent}{variable} = {klass}.new({text}{attributes})",
  "new_leaf": "{indent}{parent}.{method}({text}{attributes})",
  "new_text": "{indent}{parent}.add_text('{text}')",
  "new_klass": "Twilio::TwiML::{klass}",
  "append": "end",
  "print": "puts response",
  "use_boolean": true,
  "optional_parentheses": true,
  "formatter": "",
  "depth_padding": -1
}
