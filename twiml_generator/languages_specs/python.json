{
  "language": "python",
  "extension": ".py",
  "method_name_style": "underscore",
  "applicationsid_class": "ApplicationSid",
  "voice_class": "VoiceResponse",
  "messaging_class": "MessagingResponse",
  "text_format": "{text}, ",
  "attribute_name_style": "underscore",
  "attribute_format": "{name}={value}",
  "chain_calls": false,
  "code_wrapper": "{imports}\n{code}\n{print}",
  "code_wrapper_padding": 0,
  "add_imports": "single_line",
  "import_voice": "from twilio.twiml.voice_response import {imports}",
  "import_messaging": "from twilio.twiml.messaging_response import {imports}",
  "new_variable": "{variable} = {klass}({text}{attributes})",
  "new_leaf": "{parent}.{method}({text}{attributes})",
  "new_text": "{parent}.append('{text}')",
  "append": "{parent}.append({variable})",
  "print": "print(response)",
  "formatter": "yapf -i {filepath}"
}
